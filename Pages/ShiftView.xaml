                        Header="Location" 
                        Width="*"
                        Binding="{Binding Location}" 
                        FontSize="20" />
                    <controls:DataGridTextColumn
                        Header="Role" 
                        Width="*"
                        Binding="{Binding Role}" 
                        FontSize="20" />
                    <controls:DataGridTextColumn
                        Header="Date" 
                        Width="*"
                        Binding="{Binding DateString}" 
                        FontSize="20" />
                    <controls:DataGridTextColumn
                        Header="Start Time" 
                        Width="*"
                        Binding="{Binding StartString}" 
                        FontSize="20" />
                    <controls:DataGridTextColumn
